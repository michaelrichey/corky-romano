<% wrap_layout :layout do %>
    <img src="../images/glassline.gif" class="blog-layout__linebreak">
    <%= yield %>
    <img src="../images/glassline.gif" class="blog-layout__linebreak">
    <p>READ MORE:</p>
    <% page_articles.each_with_index do |article, i| %>
      <div class="main-page-article-preview">
        <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
        <%= article.summary(50) %>
      </div>
    <% end %>
    
<% end %>